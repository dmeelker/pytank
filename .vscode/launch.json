    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run Game",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/game",
            "program": "${workspaceFolder}/game/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Editor",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/game",
            "program": "${workspaceFolder}/game/editor.py",
            "args": ["levels/level1.txt"],
            "console": "integratedTerminal"
        }
    ]
}